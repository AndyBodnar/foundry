# Foundry MLOps Platform - Environment Variables
# Copy this file to .env and customize for your environment

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=Foundry MLOps Platform
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
API_V1_PREFIX=/api/v1

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=true

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/foundry
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_ECHO=false

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10
REDIS_CACHE_TTL=3600

# =============================================================================
# Celery Configuration
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# =============================================================================
# JWT Authentication
# =============================================================================
JWT_SECRET_KEY=change-me-in-production-use-secure-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# API Keys
# =============================================================================
API_KEY_PREFIX=fnd_
API_KEY_HASH_ALGORITHM=sha256

# =============================================================================
# S3/MinIO Storage
# =============================================================================
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET_NAME=foundry-artifacts
S3_REGION=us-west-2

# =============================================================================
# CORS Settings
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW_SECONDS=60

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# OpenTelemetry (Optional)
# =============================================================================
OTLP_ENDPOINT=
OTLP_SERVICE_NAME=foundry-api

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_METRICS=true
ENABLE_TRACING=false

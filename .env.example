# Foundry MLOps Platform - Environment Variables
# ================================================
# Copy this file to .env and fill in the values.
# DO NOT commit the .env file to version control.

# =============================================================================
# PostgreSQL Configuration
# =============================================================================
POSTGRES_USER=foundry
POSTGRES_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
POSTGRES_DB=foundry

# =============================================================================
# TimescaleDB Configuration
# =============================================================================
TIMESCALE_USER=foundry_ts
TIMESCALE_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
TIMESCALE_DB=foundry_metrics

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# =============================================================================
# MinIO Configuration
# =============================================================================
MINIO_ROOT_USER=foundry_minio
MINIO_ROOT_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# =============================================================================
# Grafana Configuration
# =============================================================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# =============================================================================
# API Configuration (for backend/docker-compose.yml)
# =============================================================================
ENVIRONMENT=development
DEBUG=false
JWT_SECRET_KEY=GENERATE_WITH_openssl_rand_base64_64
